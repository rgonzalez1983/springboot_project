<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="PersistanceUnit">
        <class>com.example.demo.entity.CityEntity</class>
        <class>com.example.demo.entity.CountryEntity</class>
        <class>com.example.demo.entity.PersonEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/springboot_new_db"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.user" value="postgres"/>
            <property name="hibernate.connection.password" value="new123"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="PersistenceUnit"/>
</persistence>
